<h2>Here are all the clients with this stylist</h2>

@if (@Model.GetClients().Count == 0)
{
  <p>No client have been added yet</p>
}
else
{
  <ol>
    @foreach (var client in @Model.GetClients())
    {
    <li>
      <form action="/delete_clients/@client.GetId()" method="post">
        @client.GetClient()
        | <a href = "/edit_clients/@client.GetId()"><button type="button">Edit</button></a>
        | <input type="hidden" name="_method" value="DELETE">
        <button type="submit">Delete</button>
      </form>
    </li>
    }
  </ol>
}

<form action = "/stylists/@Model.GetId()" method = "post">
  <label for = "client-name">client name</label>
  <input id = "client-name" name = "client-name" type = "text">
  <button type = "submit">Add client</button>
</form>
<h4><a href="/">Return home</a></h4>
