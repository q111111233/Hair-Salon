<h1>All Stylists</h1>
@if (@Model.Count == 0)
{
  <p>No stylists yet</p>
}
<ul>
  @foreach (var stylist in Model)
  {
    <li>
      <form action="/delete_stylists/@stylist.GetId()" method="post">
        <a href = "/clients/@stylist.GetId()">@stylist.GetStylist()</a>
        | <a href = "/edit_stylists/@stylist.GetId()"><button type="button">Edit</button></a>
        | <input type="hidden" name="_method" value="DELETE">
        <button type="submit">Delete</button>
      </form>
    </li>
  }
</ul>
<br>
<form action = "/" method = "post">
  <label for = "stylist-name">Stylist name</label>
  <input id = "stylist-name" name = "stylist-name" type = "text">
  <button type = "submit">Add stylist</button>
</form>
